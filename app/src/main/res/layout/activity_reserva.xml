<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/carrooscuro"
    android:layout_height="match_parent"
    tools:context=".reserva">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="358dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="casual"
        android:text="RESERVACION"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="354dp"
        android:layout_height="266dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Button
            android:id="@+id/fecha"
            android:layout_width="140dp"
            android:layout_height="wrap_content"

            android:text="Fecha" />

        <EditText
            android:id="@+id/EFECHA"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/cardview_light_background"
            android:ems="10"
            android:hint="seleccione fecha "
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toEndOf="@+id/fecha"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.189" />

        <Button
            android:id="@+id/hora"
            android:layout_width="140dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:text="hora" />


        <EditText
            android:id="@+id/EHORA"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"

            android:layout_marginBottom="8dp"
            android:background="@color/cardview_light_background"
            android:ems="10"
            android:hint="seleccione hora"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="142dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="8dp"
        android:text="DESCRIPCION"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"


        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="356dp"
        android:layout_height="132dp"


        android:layout_marginTop="12dp"
        android:text="En esta área ocupacional, realizamos todos los procedimientos requeridos para el tratamiento y reparación de la carrocería de un vehículo, incluyendo todos los accesorios que la componen. Garantizamos un proceso de refacción automotriz totalmente seguro y eficaz, y un terminado de la mayor calidad en el mercado."
        android:textColor="@android:color/background_light"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="39dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="95dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="76dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>

